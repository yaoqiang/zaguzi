{
  "appenders": [
    {
      "type": "file",
      "filename": "./logs/game-system.log",
      "maxLogSize": 1048576,
      "layout": {
        "type": "basic"
      },
      "backups": 3,
      "category": "game-system"
    },
    {
      "type": "file",
      "filename": "./logs/game-http.log",
      "maxLogSize": 1048576,
      "layout": {
        "type": "basic"
      },
      "backups": 3,
      "category": "game-http"
    },
    {
      "type": "dateFile",
      "filename": "./logs/game-all.log",
      "pattern": "-yyyy-MM-dd",
      "layout": {
        "type": "basic"
      },
      "backups": 3,
      "category": "game-all"
    },
    {
      "type": "dateFile",
      "filename": "./logs/game-record.log",
      "pattern": "-yyyy-MM-dd",
      "layout": {
        "type": "basic"
      },
      "backups": 3,
      "category": "game-record"
    },
    {
      "type": "dateFile",
      "filename": "./logs/open-api.log",
      "pattern": "-yyyy-MM-dd",
      "layout": {
        "type": "basic"
      },
      "backups": 3,
      "category": "open-api"
    },
    {
      "type": "dateFile",
      "filename": "./logs/payment.log",
      "pattern": "-yyyy-MM-dd",
      "layout": {
        "type": "basic"
      },
      "backups": 3,
      "category": "payment"
    },
    {
      "type": "dateFile",
      "filename": "./logs/login-record.log",
      "pattern": "-yyyy-MM-dd",
      "layout": {
        "type": "basic"
      },
      "backups": 3,
      "category": "login-record"
    },
    {
      "type": "console"
    }
  ],
  "levels": {
    "game-system": "INFO",
    "game-http": "INFO",
    "game-all": "INFO",
    "game-record": "INFO",
    "login-record": "INFO",
    "payment": "INFO",
    "open-api": "INFO"
  },
  "replaceConsole": true
}
