{
  "appenders": [
    {
      "type": "dateFile",
      "filename": "./logs/game-all.log",
      "pattern": "-yyyy-MM-dd",
      "layout": {
        "type": "basic"
      },
      "backups": 3,
      "category": "game-all"
    },
    {
      "type": "dateFile",
      "filename": "./logs/game-record.log",
      "pattern": "-yyyy-MM-dd",
      "layout": {
        "type": "basic"
      },
      "backups": 3,
      "category": "game-record"
    },
    {
      "type": "dateFile",
      "filename": "./logs/open-api.log",
      "pattern": "-yyyy-MM-dd",
      "layout": {
        "type": "basic"
      },
      "backups": 3,
      "category": "open-api"
    },
    {
      "type": "dateFile",
      "filename": "./logs/payment.log",
      "pattern": "-yyyy-MM-dd",
      "layout": {
        "type": "basic"
      },
      "backups": 3,
      "category": "payment"
    },
    {
      "type": "console"
    }
  ],
  "levels": {
    "game-all": "INFO",
    "game-record": "INFO",
    "payment": "DEBUG",
    "open-api": "DEBUG"
  },
  "replaceConsole": true
}
